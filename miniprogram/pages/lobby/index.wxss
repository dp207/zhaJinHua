/* Modal styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 游戏规则弹窗样式 */
.rules-dialog {
  max-height: 80%;
}

.rules-content {
  max-height: 60vh;
  padding: 0;
}

.rules-scroll {
  height: 100%;
  max-height: 60vh;
  padding: 20rpx;
}

.rules-section {
  margin-bottom: 30rpx;
}

.rules-subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFD700; /* 金色文字 */
  margin-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 215, 0, 0.5); /* 淡金色边框 */
  padding-bottom: 10rpx;
}

.rule-item {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #1a6840; /* 深绿色背景 */
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  z-index: 1001;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  border: 4rpx solid #FFD700; /* 金色边框 */
  animation: scaleIn 0.3s ease;
}

@keyframes scaleIn {
  from { transform: translate(-50%, -50%) scale(0.8); opacity: 0; }
  to { transform: translate(-50%, -50%) scale(1); opacity: 1; }
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #FFD700; /* 金色分隔线 */
  color: #ffffff; /* 白色文字 */
  background-color: #2a8c5a; /* 绿色标题背景 */
}

.modal-content {
  padding: 40rpx 30rpx;
  color: #ffffff; /* 白色文字 */
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item .label {
  width: 150rpx;
  font-size: 30rpx;
  color: #FFD700; /* 金色标签 */
  font-weight: bold;
}

.form-item input {
  flex: 1;
  border: 2rpx solid #2a8c5a; /* 绿色边框 */
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  background-color: rgba(255, 255, 200, 0.1); /* 半透明白色背景 */
  color: #ffffff; /* 白色文字 */
}

.form-item radio-group {
  display: flex;
  flex: 1;
}

.radio.disabled {
  color: #aaa;
  opacity: 0.7;
}

.form-item .radio {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #ffffff; /* 白色文字 */
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #C5CAE9; /* 浅蓝色分隔线 */
}

.modal-footer button {
  flex: 1;
  border-radius: 0;
  margin: 0;
  padding: 25rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.modal-footer .btn-cancel {
  background-color: rgba(255, 215, 0, 0); /* 淡金色背景 */
  color: #ffffff; /* 白色文字 */
}

.modal-footer .btn-cancel:active {
  background-color: rgba(255, 215, 0, 0.3); /* 稍深的淡金色 */
}

.modal-footer .btn-confirm {
  background-color: #2a8c5a; /* 绿色按钮 */
  color: #FFD700; /* 金色文字 */
}

.modal-footer .btn-confirm:active {
  background-color: #1a6840; /* 深绿色 */
}
