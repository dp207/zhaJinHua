.page-background {
  background-color: #f0f8f0;
  min-height: 100vh;
  width: 100%;
  position: relative;
  overflow: hidden;
}

/* 添加扑克牌元素动画 */
@keyframes floatingCards {
  0% { transform: translateY(0) rotate(0deg); opacity: 0.3; }
  50% { transform: translateY(-15px) rotate(5deg); opacity: 0.4; }
  100% { transform: translateY(0) rotate(0deg); opacity: 0.3; }
}

@keyframes scaleIn {
  0% { transform: translate(-50%, -50%) scale(0.8); opacity: 0; }
  100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
}

/* 扑克牌装饰元素 */
.card-decoration {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  opacity: 0.15;
  z-index: 1;
}

.card-decoration::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.card-spade {
  top: 10%;
  left: 15%;
  animation: floatingCards 7s infinite ease-in-out;
}

.card-spade::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50,15 C50,15 20,45 20,65 C20,80 35,90 50,80 C65,90 80,80 80,65 C80,45 50,15 50,15 Z M50,80 L50,95" stroke="black" stroke-width="2" fill="black"/></svg>');
}

.card-heart {
  top: 20%;
  right: 15%;
  animation: floatingCards 9s infinite ease-in-out 1s;
}

.card-heart::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50,20 C35,0 10,15 10,40 C10,65 50,90 50,90 C50,90 90,65 90,40 C90,15 65,0 50,20 Z" stroke="red" stroke-width="2" fill="red"/></svg>');
}

.card-club {
  bottom: 20%;
  left: 20%;
  animation: floatingCards 8s infinite ease-in-out 2s;
}

.card-club::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50,15 A15,15 0 1,1 50,45 A15,15 0 1,1 30,30 A15,15 0 1,1 70,30 A15,15 0 1,1 50,45 M50,45 L50,85" stroke="black" stroke-width="2" fill="black"/></svg>');
}

.card-diamond {
  bottom: 15%;
  right: 20%;
  animation: floatingCards 10s infinite ease-in-out 3s;
}

.card-diamond::before {
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M50,10 L85,50 L50,90 L15,50 Z" stroke="red" stroke-width="2" fill="red"/></svg>');
}

.page-background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><path d="M25,10 L75,10 L90,35 L50,90 L10,35 Z" fill="none" stroke="rgba(0,0,0,0.05)" stroke-width="1"/><path d="M30,20 A10,10 0 1,1 50,20 A10,10 0 1,1 70,20" fill="none" stroke="rgba(255,0,0,0.05)" stroke-width="1"/><path d="M30,80 A10,10 0 1,0 50,80 A10,10 0 1,0 70,80" fill="none" stroke="rgba(0,0,0,0.05)" stroke-width="1"/><rect x="40" y="40" width="20" height="20" rx="2" fill="none" stroke="rgba(0,0,0,0.05)" stroke-width="1"/></svg>');
  background-size: 150px 150px;
  opacity: 0.4;
  z-index: 0;
  animation: floatingCards 8s infinite ease-in-out;
}

.game-title {
  text-align: center;
  padding-top: 80rpx;
  margin-bottom: 40rpx;
  z-index: 1;
  position: relative;
}

.game-title text {
  font-size: 80rpx;
  font-weight: bold;
  color:#1a6840;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 10rpx;
}

.lobby-container {
  padding: 30rpx;
}

.btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.lobby-header {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
}

.user-info-container {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  cursor: pointer;
  border: 2rpx solid rgba(255, 255, 255, 0.7);
  z-index: 100;
}

.user-info-container:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  border: 2rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

