  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.create-room-btn {
  width: 80%;
  background-color: #4CAF50;
  color: white;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.join-room-btn {
  width: 80%;
  background-color: #2196F3;
  color: white;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
}

/* Modal styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #0e5733; /* 绿色背景，与游戏主题相符 */
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  z-index: 1001;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.5);
  border: 4rpx solid #ffcc00; /* 金色边框 */
  animation: scaleIn 0.3s ease;
}

@keyframes scaleIn {
  from { transform: translate(-50%, -50%) scale(0.8); opacity: 0; }
  to { transform: translate(-50%, -50%) scale(1); opacity: 1; }
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #ffcc00; /* 金色分隔线 */
  color: #ffffff; /* 白色文字 */
  background-color: #0a4527; /* 深绿色标题背景 */
}

.modal-content {
  padding: 40rpx 30rpx;
  color: #ffffff; /* 白色文字 */
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.form-item .label {
  width: 150rpx;
  font-size: 30rpx;
  color: #ffcc00; /* 金色标签 */
  font-weight: bold;
}

.form-item input {
  flex: 1;
  border: 2rpx solid #ffcc00; /* 金色边框 */
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  background-color: rgba(255, 255, 255, 0.1); /* 半透明白色背景 */
  color: #ffffff; /* 白色文字 */
}

.form-item radio-group {
  display: flex;
  flex: 1;
}

.radio.disabled {
  color: #aaa;
  opacity: 0.7;
}

.form-item .radio {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #ffffff; /* 白色文字 */
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #ffcc00; /* 金色分隔线 */
  background-color: #0a4527; /* 深绿色底部背景 */
}

.modal-footer button {
  flex: 1;
  border-radius: 0;
  margin: 0;
  padding: 25rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.modal-footer .btn-cancel {
  background-color: rgba(255, 255, 255, 0.1);
  color: #ffffff;
}

.modal-footer .btn-cancel:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.modal-footer .btn-confirm {
  background-color: #ffcc00; /* 金色按钮 */
  color: #0a4527; /* 深绿色文字 */
}

.modal-footer .btn-confirm:active {
  background-color: #d4af37; /* 深金色 */
}
