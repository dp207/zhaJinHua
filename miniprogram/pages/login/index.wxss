.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f8f0; /* 浅绿色背景 */
  padding: 0 30rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1a6840;
  margin-bottom: 80rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  padding: 0;
  width: 180rpx;
  height: 180rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  width: 80%;
  border: 1px solid #ddd;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nickname-label {
  font-size: 32rpx;
  color: #1a6840;
  font-weight: 500;
  margin-right: 20rpx;
}

.nickname-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  height: 60rpx;
}

.login-btn {
  width: 80%;
  margin-top: 60rpx;
  background-color: #1a6840;
  color: #fff;
  border-radius: 40rpx;
  font-size: 34rpx;
  font-weight: 500;
  padding: 16rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(26, 104, 64, 0.2);
}

/* 已登录状态下的头像和昵称样式 */
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.userinfo-nickname {
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #1a6840;
  font-weight: 500;
}