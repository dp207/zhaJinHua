.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f0f8f0; /* 浅绿色背景 */
  padding: 0 30rpx;
}

.logo {
  width: 250rpx;
  height: 250rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1a6840;
  margin-bottom: 80rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  padding: 0;
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  border: 6rpx solid #ffffff;
  position: relative;
  transition: all 0.3s ease;
  /* 确保完全圆形 */
  aspect-ratio: 1;
}

.avatar-pulse {
  animation: pulse 2s infinite ease-in-out;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 10rpx 20rpx rgba(26, 104, 64, 0.3);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.15);
  }
}

.avatar-wrapper::after {
  content: '点击选择头像';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(26, 104, 64, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 0;
  text-align: center;
  opacity: 0.9;
}

.avatar-wrapper:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
  font-size: 28rpx;
  color: #1a6840;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
  text-align: center;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
  background-color: #e0e0e0;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="%231a6840"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>');
  background-position: center;
  background-repeat: no-repeat;
  background-size: 60%;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  width: 80%;
  border: 1px solid #ddd;
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nickname-label {
  font-size: 32rpx;
  color: #1a6840;
  font-weight: 500;
  margin-right: 20rpx;
}

.nickname-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  height: 60rpx;
}

.login-btn {
  width: 80%;
  margin-top: 60rpx;
  background-color: #1a6840;
  color: #fff;
  border-radius: 40rpx;
  font-size: 34rpx;
  font-weight: 500;
  padding: 16rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(26, 104, 64, 0.2);
}

/* 已登录状态下的头像和昵称样式 */
.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
  /* 确保完全圆形 */
  aspect-ratio: 1;
}

.userinfo-nickname {
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #1a6840;
  font-weight: 500;
}