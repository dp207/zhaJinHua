.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(to bottom, #f0f8f0, #e0f0e0); /* 渐变背景 */
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 60rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 80rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  padding: 0;
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid #ffffff;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  width: 80%;
  border: 1px solid #ddd;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.nickname-label {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
}

.nickname-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.login-btn {
  width: 80%;
  margin-top: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 16rpx;
  font-size: 36rpx;
  padding: 16rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3);
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 30rpx;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.userinfo-nickname {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 40rpx;
  font-weight: 500;
}