  display: flex;
  justify-content: center;
  padding: 10rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 5;
}

.ready-btn {
  font-size: 32rpx;
  padding: 15rpx 40rpx;
  background-color: #d4af37; /* 金色按钮 */
