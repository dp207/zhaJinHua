 /* box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.4); *//* 增强阴影效果 */
 /* border: 1rpx solid rgba(255, 255, 255, 0.2);*/ /* 添加边框增强视觉效果 */
  transform-origin: center bottom; /* 设置变换原点为底部中心 */
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-bottom: 6rpx;
  border: 2rpx solid #ffcc00;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.nickname {
  font-size: 22rpx;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 140rpx;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

.player {
  position: absolute;
  width: 130rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 玩家信息弹出层 */
.player-info-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.player-info-content {
  background-color: #0e5733;
  border: 4rpx solid #ffcc00;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
  max-width: 500rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.5);
  animation: scaleIn 0.3s ease;
}

@keyframes scaleIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.popup-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #ffcc00;
  margin-bottom: 20rpx;
}

.popup-nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-align: center;
}

.popup-score {
  font-size: 32rpx;
  color: #ffcc00;
  margin-bottom: 30rpx;
  text-align: center;
}

.close-popup-btn {
  background-color: #d4af37;
  color: #000000;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  font-weight: bold;
  transition: all 0.2s ease;
}

.close-popup-btn:active {
  transform: scale(0.95);
  background-color: #c09c31;
}

/* 游戏结束弹窗 */
.game-result-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.game-result-content {
  background-color: #0e5733;
  border: 4rpx solid #ffcc00;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.5);
  animation: scaleIn 0.3s ease;
}

.game-result-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #ffcc00;
  color: #ffffff;
  background-color: #0a4527;
}

.game-result-message {
  padding: 30rpx;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 1.5;
  white-space: pre-wrap;
  word-break: break-all;
}

.game-result-scores {
  padding: 0 30rpx 30rpx;
  color: #ffffff;
}

.score-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffcc00;
  margin-bottom: 15rpx;
}

.score-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.score-name {
  color: #ffffff;
}

.score-change {
  font-weight: bold;
}

.score-change.positive {
  color: #4CAF50;
}

.score-change.negative {
  color: #F44336;
}

.game-result-btn {
  background-color: #ffcc00;
  color: #0a4527;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0;
  padding: 25rpx 0;
  border-radius: 0;
  border-top: 2rpx solid #ffcc00;
  transition: all 0.3s ease;
}

.game-result-btn:active {
  background-color: #d4af37;
}

/* 玩家信息区域 - 紧凑显示积分和下注 */
.player-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 2rpx;
}

.score, .status, .bet {
  font-size: 20rpx;
  margin: 2rpx 0;
  white-space: nowrap;
  line-height: 1.2;
}

.status {
  color: #ffcc00; /* 金色状态文字 */
  font-weight: 500;
}

.bet {
  color: #ff6666; /* 红色下注文字 */
}

/* 手牌样式 */
.hand-cards {
  display: flex;
  margin-top: 6rpx;
  justify-content: center;
}

.card {
  width: 40rpx;
  height: 56rpx;
  background-color: #ffffff;
  border-radius: 4rpx;
  margin: 0 -2rpx; /* 负边距使牌叠加显示 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18rpx;
  color: #000000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  position: relative;
  border: 1rpx solid #ffffff;
}

.card:nth-child(2) {
  z-index: 2;
}

.card:nth-child(3) {
  z-index: 3;
}

.card.hidden {
  background-color: #b71c1c; /* 红色牌背 */
  background-image: linear-gradient(45deg, #b71c1c 25%, #d32f2f 25%, #d32f2f 50%, #b71c1c 50%, #b71c1c 75%, #d32f2f 75%, #d32f2f 100%);
  background-size: 8rpx 8rpx;
  border: 1rpx solid rgba(255, 204, 0, 0.5); /* 添加金色边框 */
}

/* 当前玩家信息和牌 */
.current-player-info {
  display: flex;
  flex-direction: row; /* 改为横向排列 */
  justify-content: space-around; /* 均匀分布 */
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7); /* 增加背景色不透明度 */
  border-radius: 10rpx;
  padding: 10rpx 15rpx;
  margin-bottom: 12rpx;
  width: 95%;
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.15); /* 添加边框 */
  transform: scale(0.85); /* 按比例缩小 */
  transform-origin: center bottom; /* 从底部中心缩放 */
}

.current-player-score, 
.current-player-bet, 
.current-player-status {
  font-size: 30rpx; /* 缩小字体 */
  margin: 0 8rpx; /* 减小外边距 */
  color: #fff;
  padding: 5rpx 10rpx; /* 减小内边距 */
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 6rpx; /* 减小圆角 */
  text-align: center;
  min-width: 90rpx; /* 减小最小宽度 */
  line-height: 1.3; /* 减小行高 */
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.8);
}

.current-player-status {
  color: #ffcc00; /* 金色状态文字 */
}

.current-player-bet {
  color: #ff6666; /* 红色下注文字 */
}

.current-player-cards {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 20rpx; /* 减小上边距 */
  margin-bottom: -10rpx;
}

.current-player-card {
  width: 90rpx; /* 缩小卡牌宽度为原来的约75% */
  height: 120rpx; /* 缩小卡牌高度为原来的约75% */
  background-color: #fff;
  border-radius: 8rpx; /* 减小圆角 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx; /* 缩小字体 */
  color: #000000;
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.4); /* 减小阴影 */
  position: relative;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  z-index: 1; /* 基础z-index */
}

/* 为不同卡牌设置不同的z-index，确保叠加顺序正确 */
.current-player-card:nth-child(1) {
  z-index: 3;
}

.current-player-card:nth-child(2) {
  z-index: 2;
}

.current-player-card:nth-child(3) {
  z-index: 1;
}

.current-player-card.hidden {
  background-color: #b71c1c; /* 红色牌背 */
  background-image: linear-gradient(45deg, #b71c1c 25%, #d32f2f 25%, #d32f2f 50%, #b71c1c 50%, #b71c1c 75%, #d32f2f 75%, #d32f2f 100%);
  background-size: 15rpx 15rpx; /* 缩小背景图案 */
  border: 1rpx solid rgba(255, 204, 0, 0.5); /* 添加金色边框 */
  color: transparent;
}

.current-player-card.hidden text {
  display: none; /* 隐藏牌背文字，与其他玩家牌一致 */
}

/* 操作区域 - 两行按钮布局 */
.action-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 15rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx 20rpx 0 0;
  margin-top: 10rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 5;
  box-shadow: 0 -4rpx 10rpx rgba(0, 0, 0, 0.3);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 操作按钮行 */
.action-row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin: 4rpx 0;
}

.action-btn {
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  background-color: #d4af37; /* 恢复金色按钮 */
  color: #000000;
  border-radius: 8rpx;
  margin: 0 8rpx;
  min-width: 140rpx;
  line-height: 1.8;
  height: auto;
  font-weight: bold;
  box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #c09c30; /* 按下时的深金色 */
