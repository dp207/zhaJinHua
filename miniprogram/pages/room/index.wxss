/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #1a6840; /* 牌桌绿色背景 */
  color: #ffffff;
  padding: 10rpx;
}

/* 房间信息 */
.room-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.room-id, .base-score {
  font-size: 28rpx;
  font-weight: bold;
}

.leave-btn {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  background-color: #ff6666;
  color: #ffffff;
  border-radius: 8rpx;
  margin-left: auto;
  line-height: 1.5;
  height: auto;
}

/* 游戏区域 */
.game-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 牌桌 */
.poker-table {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 50%;
  background-color: #0e5733; /* 深绿色牌桌 */
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.5);
  margin: 20rpx;
  padding: 20rpx;
}

/* 下注池 */
.pot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.5);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffcc00; /* 金色文字 */
}

/* 玩家区域 */
.players-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.player {
  position: absolute;
  width: 180rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* U型布局 - 其他玩家在两侧和顶部排列 */
/* 左侧玩家 */
.players-container .player:nth-of-type(1) {
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

/* 顶部左侧玩家 */
.players-container .player:nth-of-type(2) {
  top: 20rpx;
  left: 30%;
  transform: translateX(-50%);
}

/* 顶部右侧玩家 */
.players-container .player:nth-of-type(3) {
  top: 20rpx;
  left: 70%;
  transform: translateX(-50%);
}

/* 右侧玩家 */
.players-container .player:nth-of-type(4) {
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
}

/* 第5个玩家 */
.players-container .player:nth-of-type(5) {
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* 当前玩家区域 - 只显示牌和信息，不显示头像和昵称 */
.current-player-area {
  position: absolute;
  bottom: 20%; /* 使用百分比单位，自适应不同屏幕尺寸 */
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 1000%; /* 增加宽度以便更好地显示内容 */
  z-index: 6; /* 提高z-index确保在操作区域上层 */
  background-color: rgba(0, 0, 0, 0.5); /* 增加背景色透明度以更好地区分 */
  border-radius: 15rpx; /* 增加圆角 */
  padding: 15rpx; /* 增加内边距 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.nickname {
  font-size: 24rpx;
  margin-bottom: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 160rpx;
}

.player {
  position: absolute;
  width: 180rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 玩家信息区域 - 横向显示积分和下注 */
.player-info {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
}

.score, .status, .bet {
  font-size: 22rpx;
  margin: 0 5rpx 5rpx 5rpx;
  white-space: nowrap;
}

.status {
  color: #ffcc00; /* 金色状态文字 */
}

.bet {
  color: #ff6666; /* 红色下注文字 */
}

/* 手牌样式 */
.hand-cards {
  display: flex;
  margin-top: 10rpx;
}

.card {
  width: 50rpx;
  height: 70rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  margin: 0 2rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #000000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.card.hidden {
  background-color: #b71c1c; /* 红色牌背 */
  background-image: linear-gradient(45deg, #b71c1c 25%, #d32f2f 25%, #d32f2f 50%, #b71c1c 50%, #b71c1c 75%, #d32f2f 75%, #d32f2f 100%);
  background-size: 10rpx 10rpx;
}

/* 当前玩家信息和牌 */
.current-player-info {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  margin-bottom: 15rpx; /* 改为下边距，因为现在信息在上方 */
  width: 95%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
}

.current-player-score, 
.current-player-bet, 
.current-player-status {
  font-size: 23rpx;
  margin: 0 15rpx;
  font-weight: 500; /* 稍微加粗字体 */
}

.current-player-status {
  color: #ffcc00; /* 金色状态文字 */
}

.current-player-bet {
  color: #ff6666; /* 红色下注文字 */
}

.current-player-cards {
  display: flex;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  justify-content: center;
}

.current-player-card {
  width: 65rpx; /* 原来的两倍 */
  height: 80rpx; /* 原来的两倍 */
  background-color: #ffffff;
  border-radius: 10rpx; /* 与卡牌大小成比例 */
  margin: 0 4rpx; /* 增加间距 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx; /* 原来的两倍 */
  color: #000000;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3); /* 增加阴影效果 */
  position: relative;
}

.current-player-card.hidden {
  background-color: #b71c1c; /* 红色牌背 */
  background-image: linear-gradient(45deg, #b71c1c 25%, #d32f2f 25%, #d32f2f 50%, #b71c1c 50%, #b71c1c 75%, #d32f2f 75%, #d32f2f 100%);
  background-size: 20rpx 20rpx; /* 原来的两倍 */
}

.current-player-card.hidden text {
  display: none; /* 隐藏牌背文字，与其他玩家牌一致 */
}

/* 操作区域 - 两行按钮布局 */
.action-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 15rpx;
  background-color: rgba(0, 0, 0, 0.6); /* 增加背景色透明度 */
  border-radius: 15rpx; /* 增加圆角 */
  margin-top: 10rpx;
  width: 90%;
  position: absolute;
  bottom: 5%; /* 使用百分比单位，自适应不同屏幕尺寸 */
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3); /* 添加阴影效果 */
}

/* 操作按钮行 */
.action-row {
  display: flex;
  justify-content: center;
  width: 100%;
  margin: 5rpx 0;
}

.action-btn {
  font-size: 28rpx; /* 增加字体大小 */
  padding: 12rpx 24rpx; /* 增加内边距 */
  background-color: #d4af37; /* 金色按钮 */
  color: #000000;
  border-radius: 15rpx; /* 增加圆角 */
  margin: 8rpx 15rpx; /* 增加按钮间距 */
  min-width: 120rpx; /* 增加最小宽度 */
  line-height: 1.5;
  height: auto;
  font-weight: bold; /* 加粗字体 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.4); /* 增强阴影效果 */
  transition: all 0.2s; /* 添加过渡效果 */
}

.action-btn[disabled] {
  background-color: #a08a2b; /* 暗金色按钮 */
  color: #666666;
  opacity: 0.7;
}

/* 准备按钮区域 */
.ready-area {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 5;
}

.ready-btn {
  font-size: 32rpx;
  padding: 15rpx 60rpx;
  background-color: #d4af37; /* 金色按钮 */
  color: #000000;
  border-radius: 10rpx;
}

/* 加注输入框 */
.raise-input {
  position: absolute;
  bottom: 250rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #d8b13c;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  z-index: 20;
}

.raise-input input {
  background-color: #ffffff;
  color: #000000;
  width: 100%;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}

.raise-input button {
  margin: 10rpx;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}

/* 比牌选择 */
.compare-select {
  position: absolute;
  bottom: 250rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #ffcc00;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  z-index: 20;
}

.compare-select text {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.compare-players {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 20rpx;
}

.compare-players button {
  margin: 10rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}

/* 聊天区域 - 右下角侧边栏 */
.chat-area-sidebar {
  position: fixed;
  right: 0;
  bottom: 120rpx;
  width: 400rpx;
  background: rgba(0,0,0,0.7);
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  padding: 10rpx 0 0 0;
  z-index: 100;
  transition: transform 0.3s ease;
}

.chat-area-sidebar.collapsed {
  transform: translateX(calc(100% - 80rpx));
}
.chat-header {
  text-align: center;
  padding: 10rpx 0;
  color: #ffcc00;
  font-size: 26rpx;
  background: rgba(0,0,0,0.3);
  border-top-left-radius: 20rpx;
  cursor: pointer;
  width: 100%;
  box-sizing: border-box;
}
.chat-messages {
  max-height: 220rpx;
  overflow-y: auto;
  padding: 10rpx 20rpx;
}
.chat-message-bubble {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}
.chat-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #fff;
}
.chat-bubble-content {
  background: #fff;
  color: #222;
  border-radius: 16rpx;
  padding: 10rpx 18rpx;
  max-width: 420rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
}
.chat-sender {
  font-size: 22rpx;
  color: #1a6840;
  font-weight: bold;
  margin-bottom: 2rpx;
}
.chat-content {
  font-size: 22rpx;
  word-break: break-all;
}
.chat-input {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx 20rpx 20rpx;
  background: rgba(0,0,0,0.3);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.chat-input input {
  flex: 1;
  height: 48rpx;
  border-radius: 10rpx;
  border: none;
  padding: 0 16rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.chat-input button {
  font-size: 22rpx;
  padding: 0 24rpx;
  height: 48rpx;
  border-radius: 10rpx;
  background: #d4af37;
  color: #000;
  border: none;
}

.chat-input button[disabled] {
  background-color: #666666;
  color: #999999;
}

.chat-input button {
  font-size: 24rpx;
  padding: 5rpx 20rpx;
  background-color: #d4af37; /* 金色按钮 */
  color: #000000;
  border-radius: 5rpx;
}

.chat-input button[disabled] {
  background-color: #666666;
  color: #999999;
}