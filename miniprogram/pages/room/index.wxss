.compare-select > button:active {
  transform: scale(0.95);
  background-color: #c09c30; /* 按下时的深金色 */
}

/* 聊天区域 - 右下角侧边栏 */
.chat-area-sidebar {
  position: fixed;
  right: 0;
  bottom: 120rpx;
  width: 400rpx;
  background: rgba(0,0,0,0.7);
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  padding: 10rpx 0 0 0;
  z-index: 100;
  transition: transform 0.3s ease;
}

.chat-area-sidebar.collapsed {
  transform: translateX(calc(100% - 80rpx));
}
.chat-header {
  text-align: center;
  padding: 10rpx 0;
  color: #ffcc00;
  font-size: 26rpx;
  background: rgba(0,0,0,0.3);
  border-top-left-radius: 20rpx;
  cursor: pointer;
  width: 100%;
  box-sizing: border-box;
}
.chat-messages {
  max-height: 220rpx;
  overflow-y: auto;
  padding: 10rpx 20rpx;
}
.chat-message-bubble {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}
.chat-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  background: #fff;
}
.chat-bubble-content {
  background: #fff;
  color: #222;
  border-radius: 16rpx;
  padding: 10rpx 18rpx;
  max-width: 420rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
}
.chat-sender {
  font-size: 22rpx;
  color: #1a6840;
  font-weight: bold;
  margin-bottom: 2rpx;
}
.chat-content {
  font-size: 22rpx;
  word-break: break-all;
}
.chat-input {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx 20rpx 20rpx;
  background: rgba(0,0,0,0.3);
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.chat-input input {
  flex: 1;
  height: 48rpx;
  border-radius: 10rpx;
  border: none;
  padding: 0 16rpx;
  font-size: 22rpx;
  margin-right: 10rpx;
}
.chat-input button {
  font-size: 22rpx;
  padding: 0 24rpx;
  height: 48rpx;
  border-radius: 10rpx;
  background: #d4af37;
  color: #000;
  border: none;
}

.chat-input button[disabled] {
  background-color: #666666;
  color: #999999;
}

.chat-input button {
  font-size: 24rpx;
  padding: 5rpx 20rpx;
  background-color: #d4af37; /* 金色按钮 */
  color: #000000;
  border-radius: 5rpx;
}

.chat-input button[disabled] {
  background-color: #666666;
  color: #999999;
}