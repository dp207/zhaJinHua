/* 复制成功提示 */
.copy-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.show-toast {
  opacity: 1;
}

/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #1a6840; /* 牌桌绿色背景 */
  color: #ffffff;
  padding: 10rpx;
}

/* 房间信息 */
.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  flex-wrap: nowrap;
}

.room-id-container, .base-score-container {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.room-id-label, .base-score-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 10rpx;
}

.room-id-value, .base-score-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffcc00;
}

.copy-icon {
  margin-left: 10rpx;
  font-size: 22rpx;
  background-color: rgba(255, 204, 0, 0.2);
  color: #ffcc00;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 204, 0, 0.5);
}

.leave-btn {
  font-size: 24rpx;
  padding: 6rpx 10rpx;
  background-color: #ff5252;
  color: #ffffff;
  border-radius: 20rpx;
  margin-left: auto;
  line-height: 1.5;
  height: auto;
  min-width: 80rpx !important; /* 添加最小宽度 */
  max-width: 100rpx !important; /* 添加最大宽度 */
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  font-weight: bold;
  transition: all 0.2s ease;
  display: inline-block; /* 确保按钮不会扩展 */
}

.leave-btn-hover {
  transform: scale(0.95);
  background-color: #ff3838;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 游戏区域 */
.game-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 0 10rpx;
  margin-bottom: 10rpx;
}

/* 牌桌 */
.poker-table {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  border-radius: 50%;
  /*background-color: #0e5733; *//* 深绿色牌桌 */
  /*box-shadow: 0 0 20rpx rgba(0, 0, 0, 0);
  margin: 20rpx;
  padding: 20rpx;*/
}

/* 下注池 */
.pot {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.6);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffcc00; /* 金色文字 */
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  border: 2rpx solid rgba(255, 204, 0, 0.3);
  backdrop-filter: blur(2px);
}

/* 玩家区域 */
.players-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.player {
  position: absolute;
  width: 160rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

